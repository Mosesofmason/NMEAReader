<Window x:Class="NMAEReader.AboutDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NMAEReader"
        mc:Ignorable="d"
        Title="About" Height="180" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Height="150" Margin="1,0,1,-1">
        <Label x:Name="label" Content="NMEA ver. 0.1 alpha" Margin="0,0,0,40" VerticalAlignment="Center" Width="292" Height="40" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">           
            <Hyperlink NavigateUri="https://twitter.com/mosesofmason" RequestNavigate="Hyperlink_RequestNavigate">
                @mosesofmason
            </Hyperlink>
        </TextBlock>
        <Button x:Name="button" Content="_Close" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="55" Margin="0,0,0,20" Click="button_Click"/>
    </Grid>
</Window>
